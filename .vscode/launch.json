{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Merge Files: Run (Default)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/merge_files.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Merge Files: With File Tagging",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/merge_files.py",
            "args": [
                "--tag-files"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Merge Files: Show Version",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/merge_files.py",
            "args": [
                "--version"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "──────────── UNMERGE ────────────",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/merge_files.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Unmerge: Reconstruct Files (Skip Existing)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/merge_files.py",
            "args": [
                "unmerge",
                "merged_output.md"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
